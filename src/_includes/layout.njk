<!doctype html>
<html lang="id">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ title or 'Jobnas Feed on Netlify' }}</title>
    <meta name="description" content="Kumpulan posting terbaru dari jobnas.com">
    <style>
      body { font-family: Arial, sans-serif; max-width: 800px; margin: auto; padding: 20px; }
      header, footer { padding: 10px 0; }
      .post { margin-bottom: 20px; border-bottom: 1px solid #ccc; padding-bottom: 10px; }
      a { color: blue; text-decoration: none; }
      a:hover { text-decoration: underline; }
    </style>
  </head>
  <body>
    <header>
      <h1>Jobnas Feed</h1>
    </header>
    <main>
      {{ content | safe }}
    </main>
    <footer>
      Dibangun dengan Eleventy. Sumber: jobnas.com
    </footer>
  </body>
</html>
