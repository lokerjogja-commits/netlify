---
layout: layout.njk
pagination:
  data: collections.posts
  size: 20
  alias: posts
permalink: "/"
---

<h2>Posting Terbaru</h2>
{% for post in posts | reverse %}
<div class="post">
  <h3><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
  <small>{{ post.date | date("dd LLL yyyy") }}</small>
  <p>{{ post.templateContent | truncate(200) | safe }}</p>
</div>
{% endfor %}
